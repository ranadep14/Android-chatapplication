<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_chat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_15"
        android:layout_marginTop="@dimen/px_5"
        android:layout_marginBottom="@dimen/px_5"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_5"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_reply"
                android:layout_width="@dimen/px_20"
                android:layout_height="@dimen/px_15"
                android:rotation="180"
                android:src="@drawable/ic_forword"
                android:text="hghhvhjvjhvhj"
                android:tint="@color/colorPrimary" />


            <TextView
                android:id="@+id/txt_reply_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_reply"
                android:alpha=".52"
                android:text="to"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/px_12"
                android:textStyle="bold" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/msg_square"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/msg_in_bg"
                    android:orientation="vertical"
                    android:padding="@dimen/px_10">

                    <TextView
                        android:id="@+id/txt_sender_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".52"
                        android:text="to"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/px_12"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/rel_image_in"
                        android:layout_width="@dimen/px_150"
                        android:layout_height="@dimen/px_100"
                        >

                        <ImageView
                            android:id="@+id/img_from_pic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            />

                        <LinearLayout
                            android:id="@+id/li_download"
                            android:layout_width="@dimen/px_70"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/rounding"
                            android:gravity="center"
                            android:visibility="gone"
                            android:padding="@dimen/px_5">

                            <Button
                                android:id="@+id/btnDownload"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:alpha="0.6"
                                android:background="@drawable/circle_arrow_down"
                                android:backgroundTint="@color/colorWhite" />
                        </LinearLayout>


                    </RelativeLayout>

                    <ProgressBar
                        android:id="@+id/progress_bar_in"
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_40"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rel_image_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_pdf"
                            android:layout_width="@dimen/px_100"
                            android:layout_height="@dimen/px_120"
                            android:scaleType="fitXY"
                            android:src="@drawable/icons_pdf"
                            android:visibility="gone" />


                        <LinearLayout
                            android:id="@+id/li_download_doc"
                            android:layout_width="@dimen/px_70"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/rounding"
                            android:gravity="center"
                            android:padding="@dimen/px_5">

                            <Button
                                android:id="@+id/btnDownload_doc"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:alpha="0.6"
                                android:background="@drawable/circle_arrow_down"
                                android:backgroundTint="@color/colorWhite" />
                        </LinearLayout>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rel_image_zip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/img_zip"
                            android:layout_width="@dimen/px_100"
                            android:layout_height="@dimen/px_120"
                            android:scaleType="fitXY"
                            android:src="@drawable/icons_zip"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/li_download_zip"
                            android:layout_width="@dimen/px_70"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/rounding"
                            android:gravity="center"
                            android:padding="@dimen/px_5">

                            <Button
                                android:id="@+id/btnDownload_zip"
                                android:layout_width="@dimen/px_25"
                                android:layout_height="@dimen/px_25"
                                android:alpha="0.6"
                                android:background="@drawable/circle_arrow_down"
                                android:backgroundTint="@color/colorWhite" />
                        </LinearLayout>


                    </RelativeLayout>

                    <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                        android:id="@+id/txt_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".82"
                        android:autoLink="phone|web|map"
                        android:inputType="none"
                        android:lineSpacingExtra="@dimen/px_2"
                        android:text="Lorem ispu is simply dummy text for typetext industry"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/px_14"
                        emojicon:emojiconSize="@dimen/px_16" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">

                        <ImageView
                            android:id="@+id/img_msg_star"
                            android:layout_width="@dimen/px_15"
                            android:layout_height="@dimen/px_15"
                            android:layout_marginTop="@dimen/px_2"
                            android:layout_marginRight="@dimen/px_10"
                            android:visibility="gone"
                            android:src="@drawable/ic_star_black_24dp" />


                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha=".52"
                            android:text="22:30"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/px_12" />

                        <ImageView
                            android:id="@+id/img_msg_status"
                            android:layout_width="@dimen/px_15"
                            android:layout_height="@dimen/px_15"
                            android:layout_marginLeft="@dimen/px_8"
                            android:layout_marginTop="@dimen/px_2"
                            android:src="@drawable/ic_done"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>