    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="@dimen/px_18"
        android:layout_marginLeft="@dimen/px_15"
        android:visibility="invisible"/>
    <LinearLayout
        android:id="@+id/ll_search_contact_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rec_user_list"
            android:layout_weight="1"
            android:visibility="visible"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_weight="1">
        <ProgressBar
            android:id="@+id/prg_searchlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progress="100"
            android:progressTint="@color/colorBlueTxt"
            android:visibility="gone"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/txt_no_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Please search contacts"
            android:textSize="@dimen/px_18"
            android:visibility="visible"
            android:gravity="center"
            android:layout_marginBottom="@dimen/px_20"
            android:layout_weight="1"
            />

    </LinearLayout>
    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->

</LinearLayout>