    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >

        <EditText
            android:id="@+id/edit_uname"
            android:layout_margin="@dimen/px_10"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_50"
            style="@style/edittext_style"
            android:paddingLeft="@dimen/px_15"
            android:paddingRight="@dimen/px_15"
            android:hint="Enter First name Last name"
            android:imeOptions="actionSearch"
            android:inputType="textEmailAddress"
            />

        <ImageView
            android:id="@+id/imageVSearch"
            android:layout_width="@dimen/px_28"
            android:layout_height="@dimen/px_28"
            android:layout_alignRight="@+id/edit_uname"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search1"
            />

    </RelativeLayout>


