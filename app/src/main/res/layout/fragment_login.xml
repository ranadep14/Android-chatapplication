<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppTheme"
    >
    <!--<ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:fillViewport="true"
         android:scrollbars="none"
         android:visibility="visible">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginBottom="@dimen/px_1"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginRight="@dimen/px_40">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_150"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/px_200"
                    android:layout_height="@dimen/px_130"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_app_logo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_50"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_login_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/login_frag_title"
                    android:singleLine="true"
                    android:textSize="@dimen/px_18"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_gravity="center"
                android:gravity="center">
                <EditText
                    android:id="@+id/edit_uname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_50"
                    style="@style/edittext_style"
                    android:paddingLeft="@dimen/px_15"
                    android:paddingRight="@dimen/px_15"
                    android:hint="@string/login_id_hint"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_gravity="center"
                android:gravity="center">
                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_50"
                    android:paddingLeft="@dimen/px_15"
                    android:paddingRight="@dimen/px_30"
                    style="@style/edittext_style"
                    android:text=""
                    android:hint="@string/pwd_hint"
                    android:inputType="textPassword|textNoSuggestions"
                    android:imeOptions="actionDone"/>  <!--android:paddingRight="@dimen/px_15"-->
                <ImageView
                    android:id="@+id/iconHidePass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_hide_pass"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/px_16"
                    android:layout_marginRight="@dimen/px_10"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="right"
                android:gravity="right">
                <TextView
                    android:id="@+id/txt_forgot_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="@string/forgot_password"
                    android:textSize="@dimen/px_12"
                    android:textColor="@color/colorBlueTxt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_gravity="center"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"/>
                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        style="@style/btn_style"
                        android:layout_height="@dimen/px_50"
                        android:text="@string/login_btn"
                        android:layout_weight="1"/>
                    <com.github.ybq.android.spinkit.SpinKitView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/progress_login"
                        style="@style/SpinKitView.Large.ThreeBounce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:SpinKit_Color="@color/colorAccent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/signup_text"
                    android:textSize="@dimen/px_19"
                    android:visibility="visible"
                    android:textColor="@color/colorBlueTxt"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--<ProgressBar
        android:id="@+id/circularProgressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/progressbar"
        android:secondaryProgress="100"
        />-->
    <ProgressBar
        android:id="@+id/circularProgressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/px_300"
        android:layout_height="@dimen/px_230"
        android:indeterminate="false"
        android:max="100"
        android:progress="2"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/progressbar"
        android:secondaryProgress="100"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv"
        android:layout_width="@dimen/px_50"
        android:layout_height="@dimen/px_28"
        android:gravity="center"
        android:text="2%"
        android:layout_centerInParent="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/px_18"
        android:visibility="gone"
        />
    <!--</ScrollView>-->
</RelativeLayout>