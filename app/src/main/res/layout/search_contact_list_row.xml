<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contact_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMsgAll"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="400dp"
        android:orientation="vertical"
        android:layout_height="@dimen/px_90"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/px_60"
                    android:layout_height="@dimen/px_60"
                    android:src="@drawable/clouds_logo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/px_5"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tom Hardy"
                        android:textColor="@color/colorBtnDark"
                        android:textSize="@dimen/px_15"
                        android:alpha=".82"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:textColor="@color/colorReqStatus"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:visibility="invisible"
                        android:layout_weight="3"
                        android:textSize="@dimen/px_12"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_mail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:textColor="@color/colorBtnDark"
                        android:textSize="@dimen/px_13"
                        android:alpha=".52"
                        android:ellipsize="end"
                        android:layout_marginRight="@dimen/px_60" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorWhite"
            android:layout_marginRight="@dimen/px_10"
            android:layout_marginLeft="@dimen/px_10"/>
    </LinearLayout>

        <CheckBox
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/px_10"
            android:id="@+id/rad_select"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

</RelativeLayout>