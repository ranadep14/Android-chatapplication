<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/border"
    android:layout_margin="@dimen/px_5"
    android:orientation="vertical"
    android:padding="@dimen/px_5">



    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorBlueTxt"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="ddddddd"
        android:paddingLeft="@dimen/px_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_45"
        android:orientation="horizontal"
        android:weightSum="7">


        <ImageView
            android:id="@+id/imageview_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:src="@drawable/ic_event_note_black_24dp" />


        <TextView
            android:id="@+id/event_from"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text="ddssssss" />

        <TextView
            android:id="@+id/txt_to"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="To" />


        <TextView
            android:id="@+id/event_to"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text="ddssssss"/>




        <ImageView
            android:id="@+id/imageview_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:src="@drawable/ic_edit_black_24dp" />


        <ImageView
            android:id="@+id/imageview_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:src="@drawable/ic_delete_black_24dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_location"
            android:text="nnnnn"
            android:singleLine="true"
            android:ellipsize="end"/>


    </LinearLayout>




</LinearLayout>
