<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:emojicon="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_15"
            android:layout_marginTop="@dimen/px_5"
            android:layout_marginBottom="@dimen/px_5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/msg_square"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/msg_in_bg"
                        android:orientation="vertical"
                       >


                        <RelativeLayout
                            android:id="@+id/rel_image_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/li_reply"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/px_10"
                                android:layout_marginTop="@dimen/px_10"
                                android:layout_marginRight="@dimen/px_10"
                                android:background="@drawable/reply_msg_bg"
                                android:orientation="vertical"
                                android:padding="@dimen/px_10"
                                android:visibility="visible">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/txt_sender_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:alpha=".52"
                                        android:text="to"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/px_12"
                                        android:textStyle="bold" />

                                         <TextView
                                        android:id="@+id/txt_msg_reply"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/txt_sender_name"
                                        android:text="hi"
                                        android:maxLines="3"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/px_14" />

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/px_5"
                            >


                            <TextView
                                android:id="@+id/reply_new_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/px_5"
                                android:layout_toLeftOf="@+id/txt_time"
                                android:text="hello"
                                android:layout_alignParentLeft="true" />


                            <TextView
                                android:id="@+id/txt_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha=".52"
                                android:text="22:30"
                                android:layout_marginRight="@dimen/px_20"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/px_12" />

                            <ImageView
                                android:id="@+id/img_msg_status"
                                android:layout_width="@dimen/px_15"
                                android:layout_height="@dimen/px_15"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_done"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
