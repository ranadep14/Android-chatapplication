<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.cloudsinc.welltekmobile.nativechatapplication.fragments.conversation.ConversationListFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <include layout="@layout/custom_search_bar"/>
            <include layout="@layout/action_bar_layout"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/ll_group_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:visibility="gone">
            <android.support.v4.widget.SwipeRefreshLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/swipe_conversation"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rec_coversation_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txt_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_conversation"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlueTxt"
                android:gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/btn_retry"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Retry"
                android:padding="@dimen/px_10"
                android:textSize="22sp"
                android:layout_margin="@dimen/px_10"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:visibility="gone"/>



        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_contact"
        android:layout_width="@dimen/px_60"
        android:layout_height="@dimen/px_60"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/px_10"
        android:scaleType="center"
        android:src="@drawable/msg_bubble"/>
    <ProgressBar
        android:id="@+id/prg_conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/colorBlueTxt"
        android:layout_gravity="center"
        android:visibility="visible"/>
</FrameLayout>