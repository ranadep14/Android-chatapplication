<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_action_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_45"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_img_left_icon"
            android:layout_width="@dimen/px_45"
            android:layout_height="@dimen/px_40"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_left_icon"
                android:layout_width="@dimen/px_45"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lin_group_member_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_action_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_marginBottom="@dimen/px_5"
                    android:ellipsize="end"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:text="1 Selected"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/px_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/li_img_star"
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_35"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_right_star"
                            android:layout_width="@dimen/px_22"
                            android:layout_height="@dimen/px_22"
                            android:layout_gravity="center_vertical"
                            android:tint="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_img_reply"
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_35"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_right_icon1"
                            android:layout_width="@dimen/px_22"
                            android:layout_height="@dimen/px_22"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icons_reply" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_img_delete"
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_35"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_right_icon2"
                            android:layout_width="@dimen/px_40"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_delete" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_img_forward"
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_35"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_right_forward"
                            android:layout_width="@dimen/px_20"
                            android:layout_height="@dimen/px_22"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_forword" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_search"
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_35"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_search"
                            android:layout_width="@dimen/px_20"
                            android:layout_height="@dimen/px_22"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_search" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_35"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_right_icon3"
                        android:layout_width="@dimen/px_40"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_option_dot" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>