<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_conversation_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10"
        android:layout_height="@dimen/px_90">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="4">
                <ImageView
                    android:id="@+id/img_grp_profile"
                    android:layout_width="@dimen/px_60"
                    android:layout_height="@dimen/px_60"
                    android:src="@drawable/clouds_icon"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txt_user_img"
                    android:layout_width="@dimen/px_60"
                    android:layout_height="@dimen/px_60"
                    android:background="@drawable/user_circle_back"
                    android:textSize="@dimen/px_22"
                    android:text="A"
                    android:textColor="@color/colorLinkTxt"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_convdata_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/px_5"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_40"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/px_15"
                        android:alpha=".82"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/img_important"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:src="@drawable/ic_star_black_24dp"
                        android:paddingLeft="@dimen/px_20"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/px_10"
                         android:paddingTop="@dimen/px_5"
                        />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="2.2"
                        android:alpha=".52"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/colorLinkTxt"
                        android:textSize="@dimen/px_13" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/px_5"
                    >
                    <TextView
                        android:id="@+id/txt_msg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/px_13"
                        android:text="No message "
                        android:textColor="@color/colorBlack"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:alpha=".52"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_msg_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/msg_count1_back"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/px_5"
                        android:paddingLeft="@dimen/px_2"
                        android:paddingRight="@dimen/px_2"
                        android:text="0"
                        android:maxLength="5"
                        android:textSize="@dimen/px_13"
                        android:visibility="invisible"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colordivider"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_marginRight="@dimen/px_10"/>
    </LinearLayout>
</LinearLayout>