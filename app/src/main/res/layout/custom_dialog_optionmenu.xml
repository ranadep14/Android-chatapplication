<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_130"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="@dimen/px_5"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Title"
            android:textSize="@dimen/px_18"
            android:textColor="@color/colorBlueTxt"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/px_10">

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="msg"
            android:textSize="@dimen/px_14"
            android:textColor="@color/colorBlueTxt"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_no"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_35"
            android:layout_marginRight="@dimen/px_30"
            android:text="No"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlueTxt"
            />
        <Button
            android:id="@+id/btn_yes"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_35"
            android:text="yes"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlueTxt"
            />
    </LinearLayout>




    </LinearLayout>

</LinearLayout>