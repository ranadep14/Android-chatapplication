<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_chat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_5"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_reply"
                android:layout_width="@dimen/px_20"
                android:layout_height="@dimen/px_15"
                android:rotation="180"
                android:src="@drawable/ic_forword"
                android:text="hghhvhjvjhvhj"
                android:tint="@color/colorPrimary" />


            <TextView
                android:id="@+id/txt_reply_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_reply"
                android:alpha=".52"
                android:text="to"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/px_12"
                android:textStyle="bold" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/msg_square"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/px_10">

                    <TextView
                        android:id="@+id/txt_sender_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".52"
                        android:text="to"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/px_12"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/rel_image_in"
                        android:layout_width="@dimen/px_200"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/msg_event_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_chat_event"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="@dimen/px_80"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/msg_blue_bg"
                                    android:gravity="center">

                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/txt_month"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/px_20"
                                                android:text="Jun"
                                                android:textColor="@color/colorWhite"
                                                android:textSize="@dimen/px_12" />

                                            <TextView
                                                android:id="@+id/txt_date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/px_20"
                                                android:layout_marginTop="@dimen/px_5"
                                                android:text="26"
                                                android:textColor="@color/colorWhite"
                                                android:textSize="@dimen/px_16" />

                                            <TextView
                                                android:id="@+id/txt_time"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/px_5"
                                                android:layout_marginTop="5dp"
                                                android:text="04:41 PM"
                                                android:textColor="@color/colorWhite"
                                                android:textSize="@dimen/px_12" />


                                        </LinearLayout>

                                    </FrameLayout>

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/txt_msg_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxLines="3"
                                    android:padding="@dimen/px_4"
                                    android:text="Today"
                                    android:textAllCaps="false" />
                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>