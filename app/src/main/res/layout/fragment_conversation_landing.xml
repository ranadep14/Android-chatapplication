<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cloudsinc.welltekmobile.nativechatapplication.fragments.conversation.ConversationLandingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_conversation_tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_60"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/px_2"
            android:paddingRight="@dimen/px_5"
            android:paddingLeft="@dimen/px_5"
            android:background="@color/colorAccent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_msgs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:layout_weight="1">
                    <!--android:background="@drawable/ripple_circle_back"-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_msg_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorTransparent"
                            android:text="Messages"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/px_14" />

                        <TextView
                            android:id="@+id/txt_msg_count"
                            android:layout_width="@dimen/px_20"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/px_5"
                            android:background="@drawable/msg_count_back"
                            android:gravity="center"
                            android:maxLength="2"
                            android:paddingLeft="@dimen/px_2"
                            android:paddingRight="@dimen/px_2"
                            android:singleLine="true"
                            android:text="55"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/px_13"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_msg_slider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/px_5"
                        android:layout_marginRight="@dimen/px_2"
                        android:background="@color/colorWhite"
                        android:layout_weight="0"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_requsts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/px_15">
                        <TextView
                            android:id="@+id/txt_req_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorTransparent"
                            android:text="Requests"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/px_14"
                            android:singleLine="true"/>
                        <TextView
                            android:id="@+id/txt_req_count"
                            android:layout_width="@dimen/px_20"
                            android:layout_height="@dimen/px_20"
                            android:background="@drawable/msg_count_back"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/px_5"
                            android:paddingLeft="@dimen/px_2"
                            android:paddingRight="@dimen/px_2"
                            android:text="5"
                            android:maxLength="2"
                            android:textSize="@dimen/px_13"
                            android:singleLine="true"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_req_slider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/px_5"
                        android:layout_marginRight="@dimen/px_2"
                        android:background="@color/colorWhite"
                        android:visibility="gone"
                        android:layout_weight="0"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--<android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>-->
        <FrameLayout
            android:id="@+id/frm_con_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>


</LinearLayout>