<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_drawer_container"
    android:layout_width="@dimen/navigation_width"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/px_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start">


                <RelativeLayout
                    android:id="@+id/rl_profile"
                    android:layout_width="@dimen/px_60"
                    android:layout_height="@dimen/px_60"
                    android:background="@drawable/profile_shadow">


                    <ImageView
                        android:id="@+id/img_user_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        />


                   <!-- <RelativeLayout
                        android:layout_width="@dimen/px_20"
                        android:layout_height="@dimen/px_20"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/profile_shadow1"
                        android:padding="@dimen/px_5">

                        <ImageView
                            android:id="@+id/img_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_edit" />
                    </RelativeLayout>-->


                </RelativeLayout>


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:alpha="1"
                    android:text="John Doe"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/px_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/txt_user_mail_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:alpha=".7"
                    android:text="john.deo@gmail.com"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/px_12" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_inbox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_inbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:alpha=".52"
            android:padding="@dimen/px_14"
            android:src="@drawable/ic_inbox" />

        <TextView
            android:id="@+id/txt_inbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_8"
            android:layout_weight="2"
            android:alpha=".82"
            android:gravity="center_vertical"
            android:text="@string/drawer_inbox"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/px_14" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/px_15"
        android:alpha=".15"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:id="@+id/lin_contacts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:alpha=".52"
            android:padding="@dimen/px_14"
            android:src="@drawable/ic_contacts" />

        <TextView
            android:id="@+id/txt_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_8"
            android:layout_weight="2"
            android:alpha=".82"
            android:gravity="center_vertical"
            android:text="@string/drawer_contacts"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/px_14" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/px_15"
        android:alpha=".15"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:id="@+id/lin_agenda"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_agenda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:alpha=".52"
            android:padding="@dimen/px_14"
            android:src="@drawable/ic_agenda" />

        <TextView
            android:id="@+id/txt_agenda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_8"
            android:layout_weight="2"
            android:alpha=".82"
            android:gravity="center_vertical"
            android:text="@string/drawer_agenda"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/px_14" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/px_15"
        android:alpha=".15"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:id="@+id/lin_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:alpha=".52"
            android:padding="@dimen/px_14"
            android:src="@drawable/ic_settings" />

        <TextView
            android:id="@+id/txt_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_8"
            android:layout_weight="2"
            android:alpha=".82"
            android:gravity="center_vertical"
            android:text="@string/drawer_settings"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/px_14" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/px_15"
        android:alpha=".15"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:id="@+id/lin_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:alpha=".52"
            android:padding="@dimen/px_14"
            android:src="@drawable/ic_logout" />

        <TextView
            android:id="@+id/txt_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_8"
            android:layout_weight="2"
            android:alpha=".82"
            android:gravity="center_vertical"
            android:text="@string/drawer_log_out"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/px_14" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/px_15"
        android:alpha=".15"
        android:background="@color/colorBlack" />

    <Button
        android:id="@+id/btnFtchUURM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>