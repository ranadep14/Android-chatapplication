<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppTheme"
    tools:context="com.cloudsinc.welltekmobile.nativechatapplication.fragments.login.LoginFragment">
    <!--<ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:fillViewport="true"
         android:scrollbars="none"
         android:visibility="visible">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginBottom="@dimen/px_1"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginRight="@dimen/px_40">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_150"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/px_200"
                    android:layout_height="@dimen/px_130"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_app_logo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_50"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_recover_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recover_password"
                    android:singleLine="true"
                    android:textSize="@dimen/px_20"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_gravity="center"
                android:gravity="center">
                <EditText
                    android:id="@+id/edit_txt_uname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_50"
                    style="@style/edittext_style"
                    android:paddingLeft="@dimen/px_15"
                    android:paddingRight="@dimen/px_15"
                    android:hint="@string/username"
                    android:inputType="text"
                    android:imeOptions="actionNext"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_gravity="center"
                android:gravity="center">
                <EditText
                    android:id="@+id/edit_p_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_50"
                    android:paddingLeft="@dimen/px_15"
                    android:paddingRight="@dimen/px_15"
                    style="@style/edittext_style"
                    android:text=""
                    android:hint="@string/personal_emailid"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="right"
                android:gravity="right">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_gravity="center"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"/>
                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        style="@style/btn_style"
                        android:layout_height="@dimen/px_50"
                        android:text="@string/submit"
                        android:layout_weight="1"/>
                    <com.github.ybq.android.spinkit.SpinKitView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/progress_login"
                        style="@style/SpinKitView.Large.ThreeBounce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:SpinKit_Color="@color/colorAccent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/txt_login"
                    android:textSize="@dimen/px_19"
                    android:visibility="visible"
                    android:textColor="@color/colorBlueTxt"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>