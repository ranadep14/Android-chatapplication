<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contact_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/px_90"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="4">
                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/px_60"
                    android:layout_height="@dimen/px_60"
                    android:src="@drawable/clouds_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/px_5"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tom Hardy"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/px_15"
                        android:alpha=".82"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/txt_designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorReqStatus"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:visibility="visible"
                        android:layout_weight="3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_mail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:text="user@mstorm.com"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/px_13"
                        android:alpha=".52"
                        android:ellipsize="end"
                        android:layout_marginRight="@dimen/px_60" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDescriptionTxt"
            android:layout_marginRight="@dimen/px_10"
            android:layout_marginLeft="@dimen/px_10"/>
    </LinearLayout>
</LinearLayout>